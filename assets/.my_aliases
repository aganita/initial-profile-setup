alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'
alias pwd='pwd -P'
alias grep='grep --color=auto'

#git aliases
alias gs='git status '
alias ga='git add '
alias gb='git branch '
alias gc='git commit -m'
alias gd='git diff'
alias goto='git checkout '
alias gb='git branch -v'
alias gk='gitk --all&'
alias gx='gitx --all'
alias gac='git commit -a -m'
alias gps='git push'
alias gpl='git pull'
alias gti='git'


#detect the OS
platform="unknown"
unamestr=$(uname)
if [[ "${unamestr}" = "Linux" ]]; then
   platform='linux'
elif [[ "$unamestr" = "Darwin" ]]; then
   platform="mac"
fi

# platform specific aliases
if [[ $platform = "linux" ]]; then
   alias ls='ls --color=auto'
   alias ll='ls -ltra --color=auto'
elif [[ $platform = "mac" ]]; then
   alias ls='ls -G'
   alias ll='ls -ltraG'
fi